{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "downlevelIteration": true
  },
  "include": [
    "src",
    "src/types/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}